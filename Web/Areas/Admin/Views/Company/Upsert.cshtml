@model Company

<div class="card shadow border-0 mt-4 mb-3">
    <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
        <div class="row px-4">
            <div class="col-12 text-center">
                <h5 class="pt-2 text-white">
                    @(Model.Id != 0 ? "Update" : "Create") Company
                </h5>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <input asp-for="Id" hidden />
                    <div class="row">
                        <div class="col-12">
                            <div class="border p-3 mt-4">
                                <div class="row mb-3 p-1">
                                    <label asp-for="Name" class="p-0"></label>
                                    <input asp-for="Name" class="form-control">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="PhoneNumber" class="p-0"></label>
                                    <input asp-for="PhoneNumber" class="form-control">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="StreetAddress" class="p-0"></label>
                                    <input asp-for="StreetAddress" class="form-control">
                                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="City" class="p-0"></label>
                                    <input asp-for="City" class="form-control">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="State" class="p-0"></label>
                                    <input asp-for="State" class="form-control">
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-6 col-md-3">
                                        @if (Model.Id != 0)
                                        {
                                            <button type="submit" class="btn btn-primary form-control">Update</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-primary form-control">Create</button>
                                        }
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <a asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}