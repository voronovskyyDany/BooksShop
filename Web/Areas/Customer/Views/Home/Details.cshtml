@model ShoppingCart

<form method="post">
    <input hidden id="productIdInput" asp-for="@Model.ProductId">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Product?.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Product?.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Product?.ImageUrl" class="rounded w-100" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge text-bg-warning">@Model.Product?.Category?.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-opacity-50 ">ISBN : @Model.Product?.ISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-opacity-50 pb-2">
                                List Price:
                                <span class="text-decoration-line-through">
                                    @Model.Product?.ListPrice?.ToString("c")
                                </span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">1-50</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">51-100</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product?.Price?.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product?.Price50?.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product?.Price100?.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(Model.Product?.Description)</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="@Model.Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                        @if(User.Identity.IsAuthenticated){
                            <div class="row">
                                <div class="col-6 col-md-4 pb-1">
                                    <button type="button" class="btn btn-warning bg-gradient  w-100 py-2 fs-6 fw-semibold " id="favoriteButton">
                                        Add to Favorite
                                    </button>
                                </div>
                            </div>
                        }
                       
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<form method="post" action="SendComment">
    <input hidden name="ProductId" asp-for="@Model.ProductId">
    <input hidden name="Rating" id="ratingInput">
    <input hidden name="ApplicationUserId">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">Left Your Comment</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <label for="textInut" class="form-label">Your feedback</label>
                    <input type="text" class="form-control" id="textInut" name="Text" />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="rating star-font">
                        <label>
                            <input type="radio" name="stars" value="1" />
                            <span class="icon">★</span>
                        </label>
                        <label>
                            <input type="radio" name="stars" value="2" />
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                        </label>
                        <label>
                            <input type="radio" name="stars" value="3" />
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                        </label>
                        <label>
                            <input type="radio" name="stars" value="4" />
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                        </label>
                        <label>
                            <input type="radio" name="stars" value="5" />
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <button type="submit"
                            class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                        Send
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient text-light py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white text-uppercase">Comments</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            @foreach (var comment in ViewBag.Comments)
            {
                <div class="col">
                    @await Component.InvokeAsync("Comment", new {comment = comment})
                </div>
            }
           
        </div>
    </div>
</div>

@section Scripts {
    @if (User.Identity.IsAuthenticated)
    {
        <script src="~/js/favorite.js"></script>
    }
    <script src="~/js/rating.js"></script>
}